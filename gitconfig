[color]
  ui = auto
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore
[diff]
  colorMoved = zebra
  tool = nvimdiff
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = nvimdiff
[mergetool]
  prompt = true
  keepBackup = false
[mergetool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\" -c 'wincmd l' -c 'nnoremap <Leader>gf :diffget LOCAL<CR>' -c 'nnoremap <Leader>gj :diffget REMOTE<CR>'"
[fetch]
  prune = true
  pruneTags = true
[include]
  path = ~/.gitconfig.local
[init]
  defaultBranch = main
[push]
  default = current
[pull]
	ff = only
[alias]
  stash-untracked = "!f() { git stash; git stash -u; git stash pop stash@{1}; }; f"
