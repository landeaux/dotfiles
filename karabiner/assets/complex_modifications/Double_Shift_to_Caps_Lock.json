{
  "title": "Left and Right Shift to toggle Caps Lock",
  "rules": [
    {
      "description": "Left and Right Shift to toggle Caps Lock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "left_shift"
              },
              {
                "key_code": "right_shift"
              }
            ],
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
