{
  "title": "Semicolon duals as Right Control when held.",
  "rules": [
    {
      "description": "Change semicolon to right_control if pressed with other keys, semicolon if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "semicolon"
            }
          ]
        }
      ]
    }
  ]
}

