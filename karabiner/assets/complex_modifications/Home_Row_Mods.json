            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "a",
              "halt": true
            }
          ],
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "key_code": "a"
              }
            ]
          },
